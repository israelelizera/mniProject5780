<Window x:Class="PLWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="MainWindow" Width="450" Height="550">

    <Grid Width="450" Height="550">
        <TextBlock x:Name="welcome" Grid.Row="0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="36" TextAlignment="Center" Margin="0" Width="244" Text="Welcome!" HorizontalAlignment="Center"/>

        <Button x:Name="host" Content="host" Margin="0,94,0,325" FontSize="36" Click="host" Width="400" Height="100"/>
        <Button Content="I'm looking for a vacation" Margin="0,224,0,180" FontSize="35" Click="cancel" Height="115" Width="400"/>
        <Button x:Name="cancel" Content="cancel" Margin="25,360,25,76" FontSize="36" Click="cancel" Height="115" Width="400"/>
    </Grid>

</Window>

<Window x:Class="PLWPF.UpdateOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="UpdateOrder" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="68,36,0,0" TextWrapping="Wrap" Text="please enter an OrderKey and Status yow want to change" VerticalAlignment="Top" Width="329" Height="30"/>
        <TextBlock x:Name="OrderKey" HorizontalAlignment="Left" Margin="20,84,0,0" TextWrapping="Wrap" Text="OrderKey:" VerticalAlignment="Top" RenderTransformOrigin="0.536,-1.086"/>
        <TextBlock x:Name="Status" HorizontalAlignment="Left" Margin="20,128,0,0" TextWrapping="Wrap" Text="Status:" VerticalAlignment="Top"/>
        <TextBox x:Name="OrderKeyBox" HorizontalAlignment="Left" Height="23" Margin="116,84,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="StatusBox" HorizontalAlignment="Left" Margin="116,128,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button" Content="Update Order" HorizontalAlignment="Left" Margin="441,297,0,0" VerticalAlignment="Top" Width="75" Click="UpdateOrder_Click"/>
    </Grid>
</Window>
